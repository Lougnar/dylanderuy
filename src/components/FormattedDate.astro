---
import type { AVAILABLE_LANGUAGES } from "../i18n/conf";

interface Props {
  date: Date;
  lang: (typeof AVAILABLE_LANGUAGES)[number];
}

const { lang, date } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(lang, {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  }
</time>
