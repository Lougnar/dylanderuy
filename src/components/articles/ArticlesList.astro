---
import { getArticles } from "../../content/config";
import type { AVAILABLE_LANGUAGES } from "../../i18n/conf";
import ArticleItem from "./ArticleItem.astro";

interface Props {
  lang: (typeof AVAILABLE_LANGUAGES)[number];
}
const { lang } = Astro.props;
const articles = await getArticles(lang);
---

<style>
  .article-list {
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    padding: 36px 0;
    gap: 32px;
    list-style-type: none;
    margin: 0;
  }
  @media (max-width: 600px) {
    .article-list {
      gap: 16px;
    }
  }
</style>
<ul class="article-list">
  {articles.map((article) => <ArticleItem article={article} lang={lang} />)}
</ul>
