---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import LearningSheets from "../components/learningSheets/LearningSheets.astro";
import { getArticles } from "../content/config";
import { getLangFromUrl } from "../i18n/utils";

function buildArticlesTree(tree, fragments, article) {
  const fragment = fragments.shift();

  if (fragments.length === 0) {
    tree[fragment] = [...(tree[fragment] ?? []), article];
  } else {
    tree[fragment] = buildArticlesTree(
      tree[fragment] ?? [],
      fragments,
      article
    );
  }

  return tree;
}
const sheets = (await getArticles()).reduce((acc, article) => {
  const fragments = article.slug.split("/");
  fragments.shift();
  acc = buildArticlesTree(acc, fragments, article);
  return acc;
}, {});

const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      ul {
        display: flex;
        flex-direction: column;
        flex-wrap: nowrap;
        gap: 36px;
        padding: 36px 0;
        list-style-type: none;
        margin: 0;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <LearningSheets articles={sheets} />
      </section>
    </main>
    <Footer />
  </body>
</html>
